doctype html
html
  head
    meta(charset="UTF-8")
    title Мероприятие #{eventName}
    style.
      body {
        font-family: Arial, sans-serif;
        background: #f9f9f9;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      h1 {
        font-size: 20px;
        color: #333;
      }
      p {
        font-size: 14px;
        color: #555;
      }
      .row {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
      }
      input {
        flex: 1;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
      }
      button, a {
        padding: 8px 12px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
      }
      .copy-btn {
        background: #2196F3;
        color: #fff;
      }
      .link-btn {
        background: #4CAF50;
        color: #fff;
      }
  body
    .container
      h1 Начало мероприятия "#{eventName}"
      p Дата и время: #{dateTime}

      // длинная ссылка
      .row
        input(type="text" readonly value=url id="longLink")
        button.copy-btn(onclick="copyToClipboard('longLink')") Скопировать
        a.link-btn(href=url target="_blank") Перейти

      // короткая ссылка
      .row
        input(type="text" readonly value=shortUrl id="shortLink")
        button.copy-btn(onclick="copyToClipboard('shortLink')") Скопировать
        a.link-btn(href=shortUrl target="_blank") Перейти

    script.
      function copyToClipboard(id) {
        const input = document.getElementById(id);
        input.select();
        input.setSelectionRange(0, 99999); // для мобильных
        document.execCommand("copy");
        alert("Ссылка скопирована: " + input.value);
      }
